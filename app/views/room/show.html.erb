<h1><%= @room.name %></h1>

<% if @room.current_round %>
  <%= form_with model: @room.current_round, action: :patch, html: { remote: true } do |form| %>
    <div title='cards-container'>
      <div class='card' data-value='?'></div>
      <div class='card' data-value='1'></div>
      <div class='card' data-value='2'></div>
      <div class='card' data-value='3'></div>
      <div class='card' data-value='5'></div>
      <div class='card' data-value='7'></div>
      <div class='card' data-value='11'></div>
      <div class='card' data-value='13'></div>
      <div class='card' data-value='17'></div>
    </div>
  <% end %>
<% end %>

<div>
  <%= form_with url: round_path, action: :post, html: { remote: true } do |form| %>
    <%= form.hidden_field :room_id, value: @room.id %>
    <%= form.text_area :description, size: '120x4' %>
    <%= form.submit 'Start new round' %>
  <% end %>
<div class='card'>

<script>
  document.querySelectorAll('.card').forEach((card) => {
    var value = card.dataset.value;
    card.textContent = value;
  });
</script>
